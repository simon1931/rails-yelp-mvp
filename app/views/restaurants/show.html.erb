<div class="container">
  <h1><%= @restaurant.name %></h1>

  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>

  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
      <li class="list-group-item"><%= review.rating %>
    <% end %>
  </ul>

<%= link_to 'Faire un comm', new_restaurant_review_path(@restaurant) %>
<br>
<%= link_to "Retour au restaurants", restaurants_path %>
</div>
